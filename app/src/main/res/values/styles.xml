<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CircleImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="RoundedImageView">
        <item name="cornerSize">8dp</item>
    </style>

    <style name="MaterialCardView">
        <item name="cardCornerRadius">8dp</item>
        <item name="cardElevation">4dp</item>
        <item name="android:backgroundTint">#EBFFFFFF</item>
    </style>

    <style name="TextAppearance.App.Regular" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">@font/poppins_black</item>
    </style>

    <style name="TextAppearance.App.Bold" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">@font/poppins_bold</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CustomChipStyle" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="android:textColor">@color/black</item>
        <item name="chipBackgroundColor">@color/white</item>
        <item name="chipStrokeColor">@color/green</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="chipMinHeight">40dp</item>
        <item name="chipMinTouchTargetSize">40dp</item>
    </style>

</resources>